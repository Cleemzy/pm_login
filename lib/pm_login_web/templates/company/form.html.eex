<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Vérifiez ci-dessous:</p>
    </div>
  <% end %>

  <%= label f, "Nom de la socété" %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <div>
    <%= submit "Enregistrer",class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
