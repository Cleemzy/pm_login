<% undeletable_rights = [1,2,3,4,7] %>
<h1><i class="bi bi-shield-exclamation"></i> Droit/ Statut</h1>

<ul>

  <li>
    <strong>Titre: </strong>
    <%= @right.title %>
  </li>

</ul>

<%= if @right.id not in undeletable_rights do %>
  <span><%= link "Modifier", to: Routes.right_path(@conn, :edit, @right) %></span>
<% end %>
<span><a href="<%= Routes.right_path(@conn, :index) %>" class="btn btn-lg btn-secondary"><i class="bi bi-arrow-bar-left"></i> Retour</a></span>
